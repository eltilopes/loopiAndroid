<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey_400"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/divider_color"
                android:transitionName="holder1" />



            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_transition_header">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">


                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_servico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardPreventCornerOverlap="false"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:background="@drawable/border_text"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <br.com.aio.fonts.RobotoTextView
                                        android:id="@+id/info_saldo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"
                                        android:textStyle="bold"
                                        android:padding="3dp"
                                        android:text="@string/saldo" />

                                    <br.com.aio.fonts.RobotoTextView
                                        android:id="@+id/valor_saldo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/textColorCinza"
                                        android:text="125,55 R$"
                                        android:paddingLeft="3dp"
                                        android:textSize="13dp" />
                                 </LinearLayout>

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/info_saque"
                                android:textColor="@color/textColorCinza"
                                android:layout_margin="3dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:textSize="14dp"
                                android:textStyle="bold"/>


                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:text="@string/nomeCompleto"/>

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorCinza"
                                android:text="@string/nomeCompleto"
                                android:paddingLeft="3dp"
                                android:textSize="13dp" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:text="@string/banco"/>

                            <Spinner
                                android:id="@+id/bancos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:background="@drawable/background_edit_text"
                                style="@style/MySpinnerStyle"/>

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:padding="3dp"
                                android:text="@string/finalidade"/>

                            <Spinner
                                android:id="@+id/finalildades"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:background="@drawable/background_edit_text"
                                style="@style/MySpinnerStyle"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:padding="3dp"
                                    android:text="@string/agencia"/>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <EditText
                                        android:id="@+id/agencia"
                                        android:layout_width="0dip"
                                        android:layout_weight="3"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="@color/textColorCinza"
                                        android:background="@drawable/background_edit_text"
                                        android:textSize="13dp"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:textStyle="bold" />

                                    <br.com.aio.fonts.RobotoTextView
                                        android:layout_width="0dip"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/textColorCinza"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:minWidth="112dp"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:text="-" />

                                    <EditText
                                        android:id="@+id/dv_agencia"
                                        android:layout_width="0dip"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:maxLength="1"
                                        android:textColor="@color/textColorCinza"
                                        android:background="@drawable/background_edit_text"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                                </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical" >

                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:padding="3dp"
                                            android:text="@string/conta"/>



                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal" >

                                            <EditText
                                                android:id="@+id/conta"
                                                android:layout_width="0dip"
                                                android:layout_weight="3"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textColor="@color/textColorCinza"
                                                android:background="@drawable/background_edit_text"
                                                android:textSize="13dp"
                                                android:inputType="number"
                                                android:maxLength="6"
                                                android:textStyle="bold" />

                                            <br.com.aio.fonts.RobotoTextView
                                                android:layout_width="0dip"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/textColorCinza"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:minWidth="112dp"
                                                android:textSize="13dp"
                                                android:textStyle="bold"
                                                android:text="-" />

                                            <EditText
                                                android:id="@+id/dv_conta"
                                                android:layout_width="0dip"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:inputType="number"
                                                android:maxLength="1"
                                                android:textColor="@color/textColorCinza"
                                                android:background="@drawable/background_edit_text"
                                                android:textSize="13dp"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                 </LinearLayout>
                            </LinearLayout>
                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:padding="3dp"
                                    android:text="@string/valor"/>

                                <EditText
                                    android:id="@+id/valor_saque"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorCinza"
                                    android:inputType="numberDecimal"
                                    android:minWidth="100dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/background_edit_text"
                                    android:textSize="13dp"/>


                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorInfoAzul"
                                    android:drawableLeft="@drawable/ic_info"
                                    android:drawablePadding="3dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12dp"
                                    android:paddingTop="5dp"
                                    android:text="@string/info_saque_minimo"/>



                        </LinearLayout>

                        </LinearLayout>

                        <br.com.aio.view.MaterialRippleLayout
                            style="@style/RippleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:gravity="center_horizontal|bottom"
                            android:layout_marginBottom="20dp"
                            app:rippleColor="@color/main_color_grey_400" >

                            <br.com.aio.fonts.RobotoTextView
                                android:id="@+id/solicitar_saque"
                                style="@style/ButtonStyle.RaisedEmpty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:gravity="center_horizontal|bottom"
                                android:background="@color/colorPrimary"
                                android:text="@string/saque"
                                android:textColor="@android:color/white"/>
                        </br.com.aio.view.MaterialRippleLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                </ScrollView>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@color/material_light_blue_800"
                android:gravity="center"
                android:orientation="horizontal">


                <br.com.aio.fonts.RobotoTextView
                    android:id="@+id/title_anuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="112dp"
                    android:text="@string/cpf"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>