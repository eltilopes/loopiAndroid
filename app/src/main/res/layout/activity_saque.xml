<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey_400"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/divider_color"
                android:transitionName="holder1" />



            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_transition_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_margin="2dp"
                        android:padding="10dp"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:layout_marginRight="4dp"
                                    android:layout_gravity="right|center_horizontal"
                                    android:gravity="right|center_horizontal"
                                    android:textStyle="bold"
                                    android:text="@string/saldo" />

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:layout_gravity="left|center_horizontal"
                                    android:gravity="left|center_horizontal"
                                    android:layout_marginLeft="4dp"
                                    android:text="121,55 R$" />

                            </LinearLayout>

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:minWidth="112dp"
                                android:layout_margin="10dp"
                                android:text="@string/info_saque"
                                android:textColor="@color/textColorAzul"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginLeft="4dp"
                                    android:minWidth="112dp"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:text="@string/nome" />

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center_horizontal"
                                    android:gravity="left|center_horizontal"
                                    android:layout_marginLeft="4dp"
                                    android:maxLines="3"
                                    android:textColor="@color/textColorAzul"
                                    android:textSize="10dp"
                                    android:text="Elton Lopes e Silva"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginLeft="4dp"
                                    android:minWidth="112dp"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:text="@string/banco" />

                                <Spinner
                                    android:id="@+id/bancos"
                                    android:layout_width="0dip"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    style="@style/MySpinnerStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginLeft="4dp"
                                    android:minWidth="112dp"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:text="@string/finalidade" />

                                <Spinner
                                    android:id="@+id/finalildades"
                                    android:layout_width="0dip"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    style="@style/MySpinnerStyle"/>

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/material_light_blue_800"
                android:gravity="center"
                android:orientation="horizontal">


                <br.com.aio.fonts.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="@string/cpf" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>