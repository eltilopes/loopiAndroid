<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/divider_color"
                android:transitionName="holder1" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_transition_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_servico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardPreventCornerOverlap="false"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:background="@drawable/border_text"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >


                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:padding="3dp"
                                    android:text="@string/nomeCompleto"/>

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorCinza"
                                    android:text="@string/nomeCompleto"
                                    android:paddingLeft="3dp"
                                    android:textSize="13dp" />


                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:padding="3dp"
                                    android:text="@string/tempo_inicio_servico"/>

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorCinza"
                                    android:inputType="numberDecimal"
                                    android:minWidth="100dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/background_edit_text"
                                    android:textSize="13dp"/>

                                    <LinearLayout
                                        android:id="@+id/ver_taxas_anuncio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@drawable/button_background"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:orientation="horizontal" >

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_margin="3dp"
                                                android:layout_gravity="center"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/ic_assignment" />

                                            <br.com.aio.fonts.RobotoTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/ver_taxas_anuncio"
                                                android:textColor="@android:color/white"
                                                android:textAlignment="center"
                                                android:layout_margin="3dp"
                                                android:padding="2dp"
                                                android:gravity="center"
                                                android:textSize="14dp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/anexar_foto_perfil"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:background="@drawable/button_background"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="2dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:orientation="horizontal" >

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_margin="3dp"
                                                android:layout_gravity="center"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/ic_camera" />

                                            <br.com.aio.fonts.RobotoTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/anexar_foto_perfil"
                                                android:textColor="@android:color/white"
                                                android:textAlignment="center"
                                                android:layout_margin="3dp"
                                                android:padding="2dp"
                                                android:gravity="center"
                                                android:textSize="14dp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>
                                    </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_exemplo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardPreventCornerOverlap="false"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:background="@drawable/border_text">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5" >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/thumbnail"
                                        android:layout_width="match_parent"
                                        android:tag="card_thumbnail"
                                        android:layout_height="180dp"
                                        android:layout_alignParentTop="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/placeholder"/>
                                </RelativeLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="3"
                                        android:elegantTextHeight="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="12dp"
                                        android:text="Nome do Prestador"
                                        android:textColor="@color/textColorCard"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/card_categoria"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/textColorCard"
                                            android:textSize="15dp"
                                            android:text="Categoria"/>
                                        <View
                                            android:layout_width="5dp"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_height="2dp"
                                            android:layout_gravity="center"
                                            android:background="@color/textColorCard" />
                                        <TextView
                                            android:id="@+id/card_sub_categoria"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/textColorCard"
                                            android:textSize="15dp"
                                            android:text="Sub Categoria"/>
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/card_especialidade"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="12dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                        android:textColor="@color/textColorCard"
                                        android:textSize="13dp"
                                        android:text="Especialidade"/>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:id="@+id/card_tempo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                        android:textColor="@color/textColorAzul"
                                        android:textSize="13dp"
                                        android:text="Em até 35 min."/>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="left|bottom"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:id="@+id/card_estrelas"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="left|bottom"
                                        android:layout_marginBottom="2dp"
                                        android:layout_gravity="left|bottom">

                                        <br.com.aio.fonts.MaterialDesignIconsTextView
                                            android:id="@+id/card_estrela_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="0dp"
                                            android:padding="2dp"
                                            android:text="@string/material_icon_star_border"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="16dp" />

                                        <br.com.aio.fonts.MaterialDesignIconsTextView
                                            android:id="@+id/card_estrela_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="0dp"
                                            android:padding="2dp"
                                            android:text="@string/material_icon_star_border"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="16dp" />

                                        <br.com.aio.fonts.MaterialDesignIconsTextView
                                            android:id="@+id/card_estrela_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="0dp"
                                            android:padding="2dp"
                                            android:text="@string/material_icon_star_border"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="16dp" />

                                        <br.com.aio.fonts.MaterialDesignIconsTextView
                                            android:id="@+id/card_estrela_4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="0dp"
                                            android:padding="2dp"
                                            android:text="@string/material_icon_star"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="16dp" />

                                        <br.com.aio.fonts.MaterialDesignIconsTextView
                                            android:id="@+id/card_estrela_5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="0dp"
                                            android:padding="2dp"
                                            android:text="@string/material_icon_star"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="16dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="bottom|right"
                                            android:layout_gravity="bottom|right"
                                            android:orientation="horizontal" >


                                            <ImageView
                                                android:id="@+id/card_favorito"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="0dp"
                                                android:padding="2dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/ic_favorite_full"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/card_estrelas"
                                        android:padding="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/card_preco"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="13dp"
                                            android:text="R$ 120,00"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="bottom|right"
                                            android:layout_gravity="bottom|right"
                                            android:orientation="horizontal" >

                                            <TextView
                                                android:id="@+id/card_localizacao"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="bottom|right"
                                                android:layout_gravity="bottom|right"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="13dp"
                                                android:text="Aldeota - 0,2km"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <br.com.aio.view.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:rippleColor="@color/main_color_grey_400" >

                        <br.com.aio.fonts.RobotoTextView
                            android:id="@+id/continuar"
                            style="@style/ButtonStyle.RaisedEmpty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:text="@string/continuar"
                            android:textColor="@android:color/white"/>
                    </br.com.aio.view.MaterialRippleLayout>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@color/material_light_blue_800"
                android:gravity="center"
                android:orientation="horizontal">


                <br.com.aio.fonts.RobotoTextView
                    android:id="@+id/title_anuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="112dp"
                    android:text="@string/crie_anuncio"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>