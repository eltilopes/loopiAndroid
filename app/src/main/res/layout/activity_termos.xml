<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/divider_color"
                android:transitionName="holder1" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_transition_header">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_servico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardPreventCornerOverlap="false"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:background="@drawable/border_text"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp" >

                                <LinearLayout
                                    android:id="@+id/termos_condicoes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/button_background"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal" >

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_margin="3dp"
                                            android:layout_gravity="center"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_assignment" />

                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/termos_condicoes"
                                            android:textColor="@android:color/white"
                                            android:textAlignment="center"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:gravity="center"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/termos_privacidade"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/button_background"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal" >

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_margin="3dp"
                                            android:layout_gravity="center"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_lock" />

                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/termos_privacidade"
                                            android:textColor="@android:color/white"
                                            android:textAlignment="center"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:gravity="center"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>
                        <LinearLayout
                            android:id="@+id/concordar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <CheckBox android:id="@+id/checkbox_concordar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    style="@style/MyCheckBox"/>

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:text="@string/termos_concordar" />
                                </LinearLayout>
                            </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <br.com.aio.view.MaterialRippleLayout
                            style="@style/RippleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:gravity="center_horizontal|bottom"
                            android:layout_marginBottom="20dp"
                            app:rippleColor="@color/main_color_grey_400" >

                            <br.com.aio.fonts.RobotoTextView
                                android:id="@+id/enviar"
                                style="@style/ButtonStyle.RaisedEmpty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:gravity="center_horizontal|bottom"
                                android:background="@color/colorPrimary"
                                android:text="@string/enviar"
                                android:textColor="@android:color/white"/>
                        </br.com.aio.view.MaterialRippleLayout>
                    </android.support.v7.widget.CardView>





                </LinearLayout>
                </ScrollView>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@color/material_light_blue_800"
                android:gravity="center"
                android:orientation="horizontal">


                <br.com.aio.fonts.RobotoTextView
                    android:id="@+id/title_anuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/termos"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>