<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/material_teal_400"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:layout_gravity="left|bottom"
            android:orientation="vertical"
            android:layout_weight="1">

            <br.com.aio.fonts.MaterialDesignIconsTextView
                android:id="@+id/image_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/material_icon_account"
                android:gravity="left|bottom"
                android:layout_gravity="left|bottom"
                android:textColor="@color/material_blue_50"
                android:layout_margin="5dp"
                android:textSize="40dp"/>

            <br.com.aio.fonts.RobotoTextView
                android:id="@+id/nome_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="left|bottom"
                android:layout_gravity="left|bottom"
                android:layout_margin="5dp"
                android:text="Elton Lopes" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right|bottom"
            android:layout_gravity="right|bottom"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CashBack:"
                android:gravity="right|bottom"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$ 54,00"
                android:gravity="right|bottom"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:textSize="12dp"
                android:textColor="?android:textColorPrimary"/>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>
