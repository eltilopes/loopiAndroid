<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <br.com.aio.fonts.RobotoTextView
            android:id="@+id/info_nao_tenho_convite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:minWidth="112dp"
            android:text="@string/infoNaoTenhoConvite"
            android:textColor="@color/textColorCinzaEscuro"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:padding="20dp">


        <EditText
            android:id="@+id/edit_text_cpf_cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:backgroundTintMode="@android:color/transparent"
            android:cursorVisible="true"
            android:drawableBottom="@android:color/transparent"
            android:ems="10"
            android:hint="@string/cpf"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textColor="@color/textColorCinza"
            android:textColorHint="@color/textColorCinza"
            android:textSize="24sp" >

            <requestFocus />
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorCinzaEscuro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpf_cnpj_validation"
            android:textStyle="italic|bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/textColorValidation"
            android:layout_below="@+id/edit_text_cpf_cnpj"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:padding="20dp">

        <EditText
            android:id="@+id/codigo_convite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:backgroundTintMode="@android:color/transparent"
            android:drawableBottom="@android:color/transparent"
            android:ems="10"
            android:hint="@string/codigoConvite"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textColor="@color/textColorCinza"
            android:textColorHint="@color/textColorCinza"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorCinzaEscuro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codigo_convite_validation"
            android:textStyle="italic|bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/textColorValidation"
            android:layout_below="@+id/codigo_convite"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <br.com.aio.view.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:rippleColor="@color/main_color_grey_400" >

            <br.com.aio.fonts.RobotoTextView
                android:id="@+id/continuar"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/colorPrimary"
                android:minWidth="112dp"
                android:text="@string/continuar"
                android:textColor="@color/branco"/>
        </br.com.aio.view.MaterialRippleLayout>

        <br.com.aio.fonts.RobotoTextView
            android:id="@+id/naoTenhoConvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/textColorAzul"
            android:minWidth="112dp"
            android:text="@string/naoTenhoConvite" />

    </LinearLayout>


</LinearLayout>