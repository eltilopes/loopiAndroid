<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <br.com.aio.fonts.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/transparent_button_selector"
            android:gravity="center_horizontal"
            android:text="@string/pedirConvite"
            android:textColor="@color/main_color_grey_700"
            android:textSize="24sp"
            app:typeface="robotoThin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <br.com.aio.fonts.MaterialDesignIconsTextView
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_account"
                android:textColor="@color/textColorAzul"
                android:textSize="22dp" />

            <br.com.aio.view.FloatLabeledEditText
                android:id="@+id/nome_completo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/nomeCompleto"
                app:fletHintTextColor="@color/textColorCinza"
                android:inputType="textCapWords"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/textColorAzul" >
            </br.com.aio.view.FloatLabeledEditText>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <br.com.aio.fonts.MaterialDesignIconsTextView
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_email"
                android:textColor="@color/textColorAzul"
                android:textSize="22dp" />

            <br.com.aio.view.FloatLabeledEditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/email"
                app:fletHintTextColor="@color/textColorCinza"
                app:fletSingleLine="true"
                android:inputType="textEmailAddress"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/textColorAzul" >
            </br.com.aio.view.FloatLabeledEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <br.com.aio.fonts.MaterialDesignIconsTextView
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_flag"
                android:textColor="@color/textColorAzul"
                android:textSize="22dp" />

            <br.com.aio.view.FloatLabeledEditText
                android:id="@+id/cpf_cnpj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/cpf"
                app:fletHintTextColor="@color/textColorCinza"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/textColorAzul" >
            </br.com.aio.view.FloatLabeledEditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="12dp"
            android:gravity="right" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dp">

                <br.com.aio.view.MaterialRippleLayout
                    style="@style/RippleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    app:rippleColor="@color/main_color_grey_400" >

                    <br.com.aio.fonts.RobotoTextView
                        android:id="@+id/pedirConvite"
                        style="@style/ButtonStyle.RaisedEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:background="@color/main_color_500"
                        android:minWidth="112dp"
                        android:text="@string/pedirConvite"
                        android:textColor="#fff" />
                </br.com.aio.view.MaterialRippleLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>