<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey_400"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp">

                                    <ImageView
                                        android:id="@+id/imagem_profissional"
                                        android:layout_width="match_parent"
                                        android:layout_height="130dp"
                                        android:layout_alignParentTop="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/background_criar_conta"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="10dp">

                                        <br.com.aio.fonts.RobotoTextView
                                            android:id="@+id/title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/textColorAzul"
                                            android:textSize="16dp"
                                            android:textStyle="bold"
                                            android:text="@string/nomeCompleto"/>

                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/textColorAzul"
                                            android:textSize="14dp"
                                            android:text="Dermatologista"/>

                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:gravity="right"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="14dp"
                                            android:text="R$ 120,00"/>


                                        <br.com.aio.fonts.RobotoTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="3dp"
                                            android:padding="2dp"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                            android:textColor="@color/textColorAzul"
                                            android:textSize="14dp"
                                            android:background="@drawable/border_text"
                                            android:text="@string/ver_curriculo"/>

                                    </LinearLayout>

                                </RelativeLayout>


                                <LinearLayout
                                    android:id="@+id/stars"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left|bottom"
                                    android:layout_gravity="left|bottom"
                                    android:orientation="horizontal">

                                    <br.com.aio.fonts.MaterialDesignIconsTextView
                                        android:id="@+id/list_item_google_cards_media_like_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:padding="2dp"
                                        android:text="@string/material_icon_star_border"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp" />

                                    <br.com.aio.fonts.MaterialDesignIconsTextView
                                        android:id="@+id/list_item_google_cards_media_like_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:padding="2dp"
                                        android:text="@string/material_icon_star_border"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp" />

                                    <br.com.aio.fonts.MaterialDesignIconsTextView
                                        android:id="@+id/list_item_google_cards_media_like_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:padding="2dp"
                                        android:text="@string/material_icon_star_border"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp" />

                                    <br.com.aio.fonts.MaterialDesignIconsTextView
                                        android:id="@+id/list_item_google_cards_media_like_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:padding="2dp"
                                        android:text="@string/material_icon_star"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp" />

                                    <br.com.aio.fonts.MaterialDesignIconsTextView
                                        android:id="@+id/list_item_google_cards_media_like_5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="0dp"
                                        android:padding="2dp"
                                        android:text="@string/material_icon_star"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true"     >


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:background="@drawable/border_text">

                            <br.com.aio.fonts.MaterialDesignIconsTextView
                                android:id="@+id/logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:padding="2dp"
                                android:text="@string/material_icon_go"
                                android:textColor="@color/textColorAzul"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/mapa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:padding="2dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/branco"
                                android:hint="@string/localizacao"
                                android:textSize="16dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true"     >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:textStyle="bold"
                                    android:text="@string/saldo"
                                    android:textSize="14dp"/>

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:text="121,55 R$"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:textStyle="bold"
                                    android:text="@string/usar_saldo"
                                    android:textSize="14dp" />

                                <EditText
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:background="@drawable/border_text"
                                    android:inputType="numberDecimal"
                                    android:textSize="14dp"/>

                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true"     >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:textStyle="bold"
                                    android:text="@string/cartao_credito"
                                    android:textSize="14dp" />

                                <EditText
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:background="@drawable/border_text"
                                    android:inputType="numberDecimal"
                                    android:textSize="14dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:padding="5dp" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:textStyle="bold"
                                    android:text="@string/total"
                                    android:textSize="14dp" />

                                <br.com.aio.fonts.RobotoTextView
                                    android:layout_width="0dip"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColorAzul"
                                    android:text="120,00 R$"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <br.com.aio.view.MaterialRippleLayout
                                style="@style/RippleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                app:rippleColor="@color/main_color_grey_400" >

                                <br.com.aio.fonts.RobotoTextView
                                    android:id="@+id/saque"
                                    style="@style/ButtonStyle.RaisedEmpty"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@color/colorButtonLaranja"
                                    android:text="@string/solicitar"
                                    android:textColor="@android:color/white"/>
                            </br.com.aio.view.MaterialRippleLayout>


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>