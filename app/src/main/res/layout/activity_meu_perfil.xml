<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey_400"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/activity_transition_header"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/divider_color"
                android:transitionName="holder1" />



            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_transition_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        xmlns:cardview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="10dp"
                        cardview:cardCornerRadius="2dp"
                        cardview:cardElevation="3dp"
                        cardview:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:padding="2dp">

                                <ImageView
                                    android:id="@+id/thumbnail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder" />

                            </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">


                             <br.com.aio.fonts.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_margin="5dp"
                                 android:layout_gravity="center_vertical"
                                 android:gravity="center_vertical"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="@string/nomeCompleto" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/button"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:tint="@color/textColorAzul"
                                android:src="@drawable/icon_edit"/>

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:cardview="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    cardview:cardCornerRadius="2dp"
                    cardview:cardElevation="3dp"
                    cardview:cardUseCompatPadding="true"     >

                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_margin="2dp"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:text="@string/nome" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:layout_margin="2dp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="Elton Lopes e Silva" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_margin="2dp"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:text="@string/telefone" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:layout_margin="2dp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="(85) 98754-3265" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_margin="2dp"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:text="@string/email" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:layout_margin="2dp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="eltilopes@gmail.com" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_margin="2dp"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:text="@string/senha" />

                            <br.com.aio.fonts.RobotoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorAzul"
                                android:layout_gravity="left|center_horizontal"
                                android:gravity="left|center_horizontal"
                                android:layout_margin="2dp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="********" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/material_light_blue_800"
                android:gravity="center"
                android:orientation="horizontal">


                <br.com.aio.fonts.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="@string/cpf" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/actions"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>