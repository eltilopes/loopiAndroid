<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="4dp"
    android:background="@drawable/border_text">

    <br.com.aio.fonts.RobotoTextView
        android:id="@+id/nome_documento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/textColorAzul"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/documentos_necessarios"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/anexo_documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_attach_file"
            android:backgroundTint="@color/textColorAzul"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>